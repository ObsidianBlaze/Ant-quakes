<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/background_main"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="520"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="220dp"
                android:src="@drawable/ant"
                android:contentDescription="@string/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manage_all_your_customer_support"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/signUp"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                android:textSize="18sp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:hint="@string/username"
                android:textColorHint="@color/signUp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/signUp"
                    android:textColorHint="@color/signUp"
                    android:textColor="@color/signUp"
                    android:drawablePadding="14dp"
                    android:inputType="textEmailAddress"
                    android:padding="20dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    tools:ignore="RtlHardcoded" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtPassLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/icon_selector"
                app:passwordToggleTint="@color/signUp"
                app:hintEnabled="true"
                android:hint="@string/password"
                android:textColorHint="@color/signUp"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPass"
                    android:backgroundTint="@color/signUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/signUp"
                    android:textColorHint="@color/signUp"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="14dp"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_lock_black_24dp"
                    tools:ignore="RtlHardcoded" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_button"
                android:padding="20dp"
                android:text="@string/login"
                android:textColor="@color/background_main"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/signUp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/forgot_password_recover_below"
                android:textSize="18sp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_vpn_key_black_24dp"
                android:drawablePadding="-21dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/forgot_password"
                android:shadowColor="@color/textColor"

                />
            <TextView
                android:id="@+id/footerTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/signUp"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="99"
            android:background="@drawable/loginsidebar"
            android:onClick="nextRegister">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/sign_up"
                android:background="@color/signUp"
                android:textSize="17sp"
                android:textColor="@color/background_main"
                android:rotation="90"

                />

        </LinearLayout>


    </LinearLayout>


</ScrollView>