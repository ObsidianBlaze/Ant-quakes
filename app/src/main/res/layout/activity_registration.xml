<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signUp"
    tools:context=".Registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="83"
            android:background="@drawable/sidebar"
            android:onClick="nextLogin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:rotation="90"
                android:text="@string/login"
                android:textColor="@color/signUp"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="500"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:gravity="center_horizontal"
                android:text="@string/antquakes"
                android:textColor="@color/background_main"
                android:textSize="50sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/first_name"
                android:textColorHint="@color/background_main"
                android:textSize="18sp"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/background_main"
                    android:drawableStart="@drawable/person_35dp"
                    android:drawableLeft="@drawable/person_35dp"
                    android:drawablePadding="14dp"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@color/background_main"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/background_main"
                android:hint="@string/last_name"
                android:textColorHint="@color/background_main"
                android:textSize="16sp"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/background_main"
                    android:drawableStart="@drawable/person_35dp"
                    android:drawableLeft="@drawable/person_35dp"
                    android:drawablePadding="14dp"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@color/background_main"
                    android:textColorHint="@color/background_main"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/username"
                android:textColorHint="@color/background_main"
                android:textSize="16sp"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/background_main"
                    android:drawableStart="@drawable/person_35dp"
                    android:drawableLeft="@drawable/person_35dp"
                    android:drawablePadding="14dp"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@color/background_main"
                    android:textColorHint="@color/background_main"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/email_address"
                android:textColorHint="@color/background_main"
                android:textSize="16sp"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/forgot_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/background_main"
                    android:drawableStart="@drawable/ic_email_black_24dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawablePadding="14dp"
                    android:inputType="textEmailAddress"
                    android:padding="20dp"
                    android:textColor="@color/background_main"
                    android:textColorHint="@color/background_main"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:hint="@string/referral_id"
                android:textColorHint="@color/background_main"
                android:textSize="16sp"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/refId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/background_main"
                    android:drawableStart="@drawable/ic_vpn_key_white_32dp"
                    android:drawableLeft="@drawable/ic_vpn_key_white_32dp"
                    android:drawablePadding="14dp"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@color/background_main"
                    android:textColorHint="@color/background_main"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/_234"
                    android:textColorHint="@color/background_main"
                    android:textSize="16sp"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dialCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/background_main"
                        android:drawableStart="@drawable/ic_phone_black_24dp"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:maxLength="4"
                        android:padding="20dp"
                        android:textColor="@color/background_main"
                        android:textColorHint="@color/background_main"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/phone_number"
                    android:textColorHint="@color/background_main"
                    android:textSize="16sp"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/background_main"
                        android:inputType="text"
                        android:padding="25dp"
                        android:textColor="@color/background_main"
                        android:textColorHint="@color/background_main"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:maxLength="11"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/password"
                android:textColorHint="@color/background_main"
                android:textSize="16sp"
                app:hintEnabled="true"
                app:passwordToggleDrawable="@drawable/reform_visibility"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/background_main">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/background_main"
                    android:drawableStart="@drawable/regform_lock_24dp"
                    android:drawableLeft="@drawable/regform_lock_24dp"
                    android:drawablePadding="14dp"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:textColor="@color/background_main"
                    android:textColorHint="@color/background_main"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/confirm_password"
                android:textColorHint="@color/background_main"
                android:textSize="16sp"
                app:hintEnabled="true"
                app:passwordToggleDrawable="@drawable/reform_visibility"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/background_main">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/background_main"
                    android:drawableStart="@drawable/regform_lock_24dp"
                    android:drawableLeft="@drawable/regform_lock_24dp"
                    android:drawablePadding="14dp"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:textColor="@color/background_main"
                    android:textColorHint="@color/background_main"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/forgot_password"
                android:padding="20dp"
                android:text="@string/register"
                android:textColor="@color/signUp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/terms_of_use"
                android:textColor="@color/background_main"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>