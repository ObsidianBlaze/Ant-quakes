<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/otp_bottom"
    tools:context=".AuthOtp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/otp_design">

            <TextView
                android:id="@+id/txtLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:text="@string/enter_verification_code"
                android:textColor="@color/blackcolor"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textSize="30sp"
                />

            <ImageView
                android:id="@+id/openEmail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/txtLogo"
                android:src="@drawable/email"
                android:layout_margin="20dp"
                android:contentDescription="@string/open_message" />

            <TextView
                android:id="@+id/txtOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/openEmail"
                android:textStyle="bold"
                android:text="@string/enter_otp_code"
                android:textColor="@color/blackcolor"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/otp_number"
                android:layout_below="@id/txtOtp"
                android:textStyle="bold"
                android:textColor="@color/blackcolor"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="14sp"

                android:layout_marginBottom="40dp"
                />



        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/OtpOne"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/otpbuttons"
                android:layout_marginRight="5dp"
                android:maxLength="1"
                android:layout_marginEnd="5dp"
                android:layout_weight="100"
                android:inputType="number"
                android:textColor="@color/blackcolor"
                android:textCursorDrawable="@null"
                android:padding="20dp"
                tools:ignore="LabelFor"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/OtpTwo"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:background="@drawable/otpbuttons"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:textCursorDrawable="@null"
                android:textColor="@color/blackcolor"
                android:padding="20dp"
                android:inputType="number"
                android:layout_weight="100"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/OtpThree"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/otpbuttons"
                android:layout_marginRight="5dp"
                android:textCursorDrawable="@null"
                android:textColor="@color/blackcolor"
                android:layout_marginEnd="5dp"
                android:padding="20dp"
                android:inputType="number"
                android:layout_weight="100"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/OtpFour"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:background="@drawable/otpbuttons"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/blackcolor"
                android:padding="20dp"
                android:textCursorDrawable="@null"
                android:inputType="number"
                android:layout_weight="100"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/OtpFive"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:background="@drawable/otpbuttons"
                android:layout_marginRight="5dp"
                android:padding="20dp"
                android:textCursorDrawable="@null"
                android:inputType="number"
                android:textColor="@color/blackcolor"
                android:layout_marginEnd="5dp"
                android:layout_weight="100"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/OtpSix"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:maxLength="1"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textColor="@color/blackcolor"
                android:background="@drawable/otpbuttons"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:layout_weight="100"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:gravity="left"
                android:layout_weight="100"
                android:textSize="16sp"
                android:textColor="@color/background_main"
                android:text="@string/otp_auto_resend_in"
                tools:ignore="RtlHardcoded" />

            <!--count down for auto resend of otp-->
            <TextView
                android:id="@+id/timer_otp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="100"
                android:gravity="center"
                android:text="@string/_29_sec"
                android:textColor="@color/background_main"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/forgot_password"
            android:text="Verify"
            android:textColor="@color/blackcolor"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/background_main"
            android:text="@string/terms_of_use"/>

    </LinearLayout>

</ScrollView>