<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cancel_btn"
    android:padding="30dp">

    <TextView
        android:id="@+id/iconsResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2dp"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:text="@string/complaint_submitted"
        android:textColor="@color/background_main"
        android:textSize="20sp"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_check_circle_black_24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:paddingEnd="15dp"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/feedResp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/complaint_response"
        android:gravity="center"
        android:textColor="@color/background_main"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/iconsResponse"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/iconsResponse"
        app:layout_constraintTop_toBottomOf="@id/iconsResponse"/>

    <Button
        android:id="@+id/btnComplaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_button"
        android:paddingLeft="50dp"
        android:paddingTop="12dp"
        android:paddingRight="50dp"
        android:paddingBottom="12dp"
        android:text="@string/complaint"
        android:textColor="@color/background_main"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/feedResp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/feedResp"
        app:layout_constraintTop_toBottomOf="@id/feedResp" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>